@model IEnumerable<CarRentalService.Domain.Models.Return>

@{
    ViewData["Title"] = "Index";
}

<h1>Returns</h1>

<table class="table">
    <thead>
        <tr>
            <!-- Specify column headers explicitly as plain text -->
            
            <th>Return Date</th>
            <th>Late Fee</th>
            <th>Total Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LateFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Change Fee</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
