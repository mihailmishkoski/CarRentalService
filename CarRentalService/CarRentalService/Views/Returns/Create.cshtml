@model CarRentalService.Domain.Models.Return

@{
    ViewData["Title"] = "Create";
}

<h1>Create Return for @Model.Rent.Car.Name</h1>

<h4>Return</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Car Name -->
            <div class="form-group">
                <label class="control-label">Car Name</label>
                <input type="text" class="form-control" value="@Model.Rent.Car.Name" readonly />
            </div>

            <!-- RentId is hidden now -->
            <input type="hidden" asp-for="RentId" />

            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" class="form-control" readonly />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LateFee" class="control-label"></label>
                <input asp-for="LateFee" class="form-control" readonly />
                <span asp-validation-for="LateFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Return" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
