@model List<CarRentalService.Domain.Models.DTO.Events>

<h2>Event List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Host Name</th>
            <th>Partner Event</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.EventName</td>
                <td>@eventItem.HostName</td>
                <td>@(eventItem.isPartnerEvent ? "Yes" : "No")</td>
                <td><img src="@eventItem.ImageUrl" alt="Event Image" width="100" /></td>
            </tr>
        }
    </tbody>
</table>
